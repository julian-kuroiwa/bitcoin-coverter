{
  "name": "btc-converter",
  "version": "1.0.0",
  "description": "A CLI to convert Bitcoin to any currency provided.",
  "main": "./index.js",
  "scripts": {
    "prepush": "npm run test:coverage",
    "test": "jest",
    "test:tdd": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir bin src",
    "build:watch": "npm run clear && npm run build -- --watch --source-maps",
    "clear": "rimraf bin",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls"
  },
  "preferGlobal": true,
  "bin": {
    "btc-converter": "bin/main.js"
  },
  "jest": {
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 80,
        "lines": 80
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "nock": "^12.0.2",
    "rimraf": "^3.0.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "chalk": "^3.0.0",
    "commander": "^4.1.1",
    "ora": "^4.0.3",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8"
  }
}
